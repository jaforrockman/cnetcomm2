<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
  <table class="table table-hover">
    <tr>
      <th><%= f.label :customer_id %></th>
      <th><%= f.label :mac_address %></th>
    </tr>

    <tr>
      <td> <%= f.text_field :customer_id %></td>
      <td><%= f.text_field :mac_address %></td>

    </tr>
  </table>
  
  </div>
  
  <div class="field">
 <table class="table table-hover">
    <tr>
      <th><%= f.label :ip_address %></th>
      <th><%= f.label :connection_type %></th>
    </tr>

    <tr>
      <td> <%= f.text_field :ip_address %></td>
      <td> <%= f.collection_select :connection_type, Connection.order(:name), :id, :name, class: "form-control" %>  <%= link_to "Add one" , new_connection_path, :target => '_blank'  %> </td>




    </tr>
  </table>
  </div>
 
  <div class="field">
 <table class="table table-hover">
    <tr>
      <th> <%= f.label :status %> </th>
      <th><%= f.label :billing_code %></th>
    </tr>

    <tr>
      <td>  <%= f.select :status, ["Active", "Inactive"]  %></td>
      <td><%= f.select :billing_code, ["On 1st of Month","On 7th of Month", "On 14th of Month" ] %></td>

    </tr>
  </table>

  </div>
   
  <div class="field">
   <table class="table table-hover">
    <tr>
      <th> <%= f.label :contact_no %> </th>
      <th> <%= f.label :contact_person %></th>
    </tr>

    <tr>
      <td>  <%= f.text_field :contact_no %></td>
      <td><%= f.text_field :contact_person %></td>

    </tr>
  </table>  
  </div>

  <div class="field">
   <table class="table table-hover">
      <tr>
        <th> <%= f.label :email %></th>
        <th>  <%= f.label :address %></th>
      </tr>

      <tr>
        <td>  <%= f.text_field :email %> </td>
        <td> <%= f.text_area :address %></td>

      </tr>
    </table>

  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary"  %>
  </div>
<% end %>
