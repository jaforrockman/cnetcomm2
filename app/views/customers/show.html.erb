
<div>
<p id="notice"><%= notice %></p>
<div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <img src="http://placehold.it/380x500" alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h4><%= @customer.name %></h4> 
                        <small><cite title="San Francisco, USA"><%= @customer.address %> <i class="glyphicon glyphicon-map-marker">
                        </i></cite></small>
                        <p>
                            <i class="glyphicon glyphicon-envelope"></i><%= @customer.contact_person %><br/>
                            <i class="glyphicon glyphicon-envelope"></i><%= @customer.email %><br/>
                            <br />
                            <i class="glyphicon glyphicon-globe"></i><a href="#"><%= @customer.contact_no %></a>
                             <br />
                             <i class="glyphicon glyphicon-gift"></i><h5><%= @customer.customer_id %></h5><br />
                            <i class="glyphicon glyphicon-gift"></i><%= @customer.mac_address %><br />
                            <i class="glyphicon glyphicon-gift"></i><%= @customer.ip_address %><br />
                            <i class="glyphicon glyphicon-gift"></i><%= @customer.connection_type %><br />
                            <i class="glyphicon glyphicon-gift"></i><%= @customer.billing_code %><br />
                            <i class="glyphicon glyphicon-gift"></i><%= @customer.status %><br />


                          </p>
                        <!-- Split button -->
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary">
                                Social</button>
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span><span class="sr-only">Social</span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Twitter</a></li>
                                <li><a href="https://plus.google.com/+Jquery2dotnet/posts">Google +</a></li>
                                <li><a href="https://www.facebook.com/jquery2dotnet">Facebook</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Github</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div align="left">
<%= link_to 'Edit Customer Details', edit_customer_path(@customer), class: "btn btn-erik" %> <%= link_to 'Crate New Bill', new_bill_path, class: "btn btn-erik" %> 

</div>


<h2 class="pull-right">Total paid till now: <%= bill_total %></h2><br><br>

<hr>


  
<div class="contaigner">
 
    <table class="table table-bordered">
        <thead>
          <tr>
            <th>Date</th>
            <th>Transaction type</th>
            <th>Valit till</th>
            <th>Amount</th>
          </tr>          
        
        </thead>

        <tbody>
            <%Customer.find(params[:id]).bills.each do |bill|%>
             
              <tr>
                  <td><%= bill.created_at.strftime "%d %B %Y" %></td>
                  <td><%= bill.transaction_type%></td>
                  <td><%= bill.valid_up_to.strftime "%d %B %Y" %></td>
                 
                  <td><%=bill.bill_amount %></td>

                  <td><%=link_to "Edit Bill", edit_bill_path, class: "btn btn-erik" %></td>
                
                </tr>
              <%end%>

          </tbody
        
        </table>
    </div>
    
