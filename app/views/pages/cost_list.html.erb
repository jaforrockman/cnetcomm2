<p id="notice"><%= notice %></p>

<h1>Listing Costs</h1>
<div><font align="center" class="btn btn-erik"><%=link_to "Create New Cost", '/costs/new'%></font>
  <div align="right"> Total Cost Till Now: &nbsp </div>
</div>


<% @cost_by_months.each do |month, costs| %>
    <tbody>
      <tr>
        <td><h3><%= month %></h3> </td>
      </tr>
    </tbody>


  <table class="table table-hover">
    <thead bgcolor="#008AB8">
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Kind</th>
        <th>Cost amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
           <% for cost in costs%>
              <tr>
                <td><%= cost.created_at.strftime "%d %B %Y" %></td>
                <td><%= cost.name %></td>
                <td><%= cost.kind %></td>
                <td align="right"><%= cost.cost_amount %></td>
              </tr>
     
          <%end%>

          <tr>
             <td> </td>
             <td> </td>
             <td> </td>
             <td align="right">total = <%=costs.sum(&:cost_amount)%></td>
             <td style="text-align:right"> </td>
          </tr>
      </tbody>
       
  </table>

<%end%> 
