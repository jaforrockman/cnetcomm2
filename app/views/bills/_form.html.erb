                                    </div>
                                  
                                    <div class="form-group">
                                      <%= f.label :bill_amount %>&nbsp &nbsp
                                      <%= f.text_field :bill_amount, class: "form-control" %>
                                    </div>

                                    <div class="form-group">
                                      <%= f.label :valid_up_to %>&nbsp &nbsp
                                      <%= f.text_field :valid_up_to, 'data-provide'=>'datepicker',data: { date_format: 'yyyy/m/d' }, class: "form-control" %>
                                    </div>
                                    
                                    <div class="form-group">
                                    <%= f.label :transaction_type %>&nbsp &nbsp
                                    <%= f.select :transaction_type, ["Cash","Due" ], class: "form-control" %>
                                  </div>
                                
                           

 
                              <div >
                              <%= f.submit "submit", class: "btn btn-primary"  %>
                              </div>
                        
                       <% end %>
                </div>

