<p id="notice"><%= notice %></p>

<h1>Listing Bills</h1>

<table id="datat" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Customer ID</th>
      <th>Bill amount</th>
      <th>Valid up to</th>
      <th>Transaction type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.customer_id %></td>
        <td><%= bill.bill_amount %></td>
        <td><%= bill.valid_up_to %></td>
        <td><%= bill.transaction_type %></td>
        <td> <%= awesome_link('fa fa-eye', bill)  %></td>
        <td><%=  awesome_link('fa-pencil-square-o', edit_bill_path(bill)) %></td>
       <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

